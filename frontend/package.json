{
  "name": "starscalendars-frontend",
  "version": "0.1.0",
  "description": "Frontend for StarsCalendars - 3D astronomical visualization with Babylon.js and WASM (NO DOCKER - builds to static files for AlmaLinux deployment)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --mode production",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "clean": "rm -rf dist node_modules/.vite",
    "test": "vitest",
    "build:wasm": "cd ../wasm-astro && wasm-pack build --release --target web -- --features wasm"
  },
  "dependencies": {
    "@babylonjs/core": "^8.21.1",
    "@babylonjs/gui": "^8.21.1",
    "@babylonjs/inspector": "^8.21.1",
    "@babylonjs/loaders": "^8.21.1",
    "@babylonjs/materials": "^8.21.1",
    "@fluent/bundle": "^0.19.1",
    "@fluent/react": "^0.15.2",
    "date-fns": "^4.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
